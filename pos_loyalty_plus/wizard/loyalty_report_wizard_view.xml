<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_pos_loyalty_report_wizard_form" model="ir.ui.view">
        <field name="name">pos.loyalty.report.wizard.form</field>
        <field name="model">pos.loyalty.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Loyalty Report">
                <group>
                    <group>
                        <field name="start_date" />
                    </group>
                    <group>
                        <field name="end_date" />
                    </group>
                </group>
                <footer>
                    <button
                        name="action_print_report"
                        string="Print Report"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the Wizard -->
    <record id="action_pos_loyalty_report_wizard" model="ir.actions.act_window">
        <field name="name">Loyalty Points History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.loyalty.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_loyalty_report_wizard_form" />
        <field name="target">new</field>
    </record>

    <!-- Menu Item in Point of Sale > Reporting -->
    <menuitem
        id="menu_pos_loyalty_report_wizard"
        name="Loyalty Points History"
        action="action_pos_loyalty_report_wizard"
        parent="point_of_sale.menu_point_rep"
        sequence="50"
    />
</odoo>
