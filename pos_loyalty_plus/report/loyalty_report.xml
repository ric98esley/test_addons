<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_loyalty_history" model="ir.actions.report">
        <field name="name">Loyalty History</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pos_loyalty_plus.report_loyalty_history</field>
        <field name="report_file">pos_loyalty_plus.report_loyalty_history</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>

    <template id="report_loyalty_history">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Loyalty History for <span t-field="o.name" /></h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Total Points:</strong>
                                <span t-field="o.loyalty_points" />
                            </div>
                        </div>

                        <h3>Order History</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Order Ref</th>
                                    <th>Points Earned</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr
                                    t-foreach="request.env['pos.order'].search([('partner_id', '=', o.id), ('loyalty_points', '>', 0)])"
                                    t-as="order"
                                >
                                    <td>
                                        <span t-field="order.date_order" />
                                    </td>
                                    <td>
                                        <span t-field="order.name" />
                                    </td>
                                    <td>
                                        <span t-field="order.loyalty_points" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
