<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_loyalty_history" model="ir.actions.report">
        <field name="name">Loyalty History</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pos_loyalty_plus.report_loyalty_history</field>
        <field name="report_file">pos_loyalty_plus.report_loyalty_history</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>

    <template id="report_loyalty_history">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <h2 class="text-center">Loyalty History</h2>
                        <h3 class="text-center"><span t-field="o.name" /></h3>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Current Balance:</strong>
                                <span t-field="o.loyalty_points" /> Points
                            </div>
                        </div>

                        <h3>Accumulation History</h3>
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Order Reference</th>
                                    <th class="text-right">Points Earned</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr
                                    t-foreach="o.env['pos.order'].search([('partner_id', '=', o.id), ('loyalty_points', '&gt;', 0)], order='date_order desc')"
                                    t-as="order"
                                >
                                    <td>
                                        <span
                                            t-field="order.date_order"
                                            t-options='{"widget": "date"}'
                                        />
                                    </td>
                                    <td>
                                        <span t-field="order.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="order.loyalty_points" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="oe_structure" />
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
