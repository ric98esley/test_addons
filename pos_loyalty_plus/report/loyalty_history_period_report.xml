<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_report_loyalty_period" model="ir.actions.report">
        <field name="name">Loyalty History (Period)</field>
        <field name="model">pos.loyalty.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pos_loyalty_plus.report_loyalty_period</field>
        <field name="report_file">pos_loyalty_plus.report_loyalty_period</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_loyalty_period">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure" />

                    <div class="text-center mt-4 mb-4">
                        <h2>Loyalty Points History Report</h2>
                        <p>
                            <strong>From:</strong> <span
                                t-esc="start_date"
                                t-options='{"widget": "date"}'
                            />
                            <strong> To:</strong> <span
                                t-esc="end_date"
                                t-options='{"widget": "date"}'
                            />
                        </p>
                    </div>

                    <t t-if="not partner_data">
                        <div class="alert alert-info text-center">
                            No loyalty points found for this period.
                        </div>
                    </t>

                    <t t-foreach="partner_data.values()" t-as="p_data">
                        <div class="mb-5" style="page-break-inside: avoid;">
                            <div
                                class="row bg-light border-top border-bottom py-2 mb-2"
                            >
                                <div class="col-6">
                                    <h4><span t-esc="p_data['partner_name']" /></h4>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Period Total: </strong> <span
                                        t-esc="p_data['period_total']"
                                        t-options='{"widget": "float", "precision": 2}'
                                    /> Points
                                    <br />
                                    <small
                                        class="text-muted"
                                    >Current Global Balance: <span
                                            t-esc="p_data['current_balance']"
                                            t-options='{"widget": "float", "precision": 2}'
                                        /></small>
                                </div>
                            </div>

                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 20%;">Date</th>
                                        <th style="width: 60%;">Order Reference</th>
                                        <th
                                            style="width: 20%;"
                                            class="text-right"
                                        >Points Earned</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="p_data['orders']" t-as="order">
                                        <td>
                                            <span
                                                t-esc="order['date']"
                                                t-options='{"widget": "date"}'
                                            />
                                        </td>
                                        <td>
                                            <span t-esc="order['ref']" />
                                        </td>
                                        <td class="text-right">
                                            <span
                                                t-esc="order['points']"
                                                t-options='{"widget": "float", "precision": 2}'
                                            />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>

                    <div class="oe_structure" />
                </div>
            </t>
        </t>
    </template>

</odoo>
