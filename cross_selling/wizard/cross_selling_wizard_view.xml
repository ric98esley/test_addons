<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_cross_selling_wizard_form" model="ir.ui.view">
        <field name="name">cross.selling.wizard.form</field>
        <field name="model">cross.selling.wizard</field>
        <field name="arch" type="xml">
            <form string="Cross Selling Suggestions">
                <field name="line_ids">
                    <tree editable="bottom" create="0">
                        <field name="is_selected" />
                        <field name="product_id" />
                        <field name="quantity" />
                    </tree>
                </field>
                <footer>
                    <button
                        name="action_add_suggestions"
                        string="Add to Order"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cross_selling_wizard" model="ir.actions.act_window">
        <field name="name">Cross Selling Suggestions</field>
        <field name="res_model">cross.selling.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
