<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form_inherit_cross_selling" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.cross.selling</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(cross_selling.action_cross_selling_wizard)d"
                    string="Check Cross-Sell"
                    type="action"
                    class="btn-secondary"
                    context="{'default_sale_order_id': active_id}"
                />
            </xpath>
        </field>
    </record>
</odoo>
